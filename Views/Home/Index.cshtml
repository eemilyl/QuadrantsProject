@{
    ViewData["Title"] = "Quadrants";
}
@model List<ApplicationResponse>
<!-- Display tasks-->
<div class="container">

    <h1> Stephen Covey's Time Management Matrix </h1>
    <br />
    <div class="row">
        <br />

        <div class="col-4">
            <h5> Quadrant I: Important / Urgent </h5>
            <br />
            <div>
                @foreach (var x in Model)
                {
                    @if (x.Quadrant == 1)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                            <br />
                        </tr>
                    }
                }
            </div>
        </div>

        <div class="col-8">
            <h5> Quadrant II: Important / Not Urgent </h5>
            <br />
            <div>
                @foreach (var x in Model)
                {
                    @if (x.Quadrant == 2)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                            <br />
                        </tr>
                    }
                }
                <br />
            </div>
            <br />
        </div>

        <br />
        <br />
        <br />

        <div class="col-4">
            <h5> Quadrant III: Not Important / Urgent </h5>
            <br />
            <div>
                @foreach (var x in Model)
                {
                    @if (x.Quadrant == 3)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                            <br />
                        </tr>
                    }
                }
            </div>
        </div>

        <div class="col-8">
            <h5> Quadrant IV: Not Important / Not Urgent </h5>
            <br />
            <div>
                @foreach (var x in Model)
                {
                    @if (x.Quadrant == 4)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                            <br />
                        </tr>
                    }
                }
            </div>
        </div>

    </div>
</div>


