@{

}

@model QuadrantsProject.Models.ApplicationResponse

<h1>Fill Out Task Information</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Task">Task:</label>
        <input asp-for="Task" /> <br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" /> <br />

        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant">
            <option value="1"> Quadrant 1</</option>
            <option value="2">Quadrant 2</</option>
            <option value="3">Quadrant 3</</option>
            <option value="4">Quadrant 4</</option>
        </select> <br />

        <label asp-for="Category">Category:</label>
        <input asp-for="Category" /> <br />

        <label asp-for="Completed"></label>
        <select asp-for="Completed">
            <option value="true">Yes</</option>
            <option value="false">No</</option>
        </select> <br />

        <button type="submit">Submit Application</button>

    </form>
</div>